<Window x:Class="LightCrm.Views.CreateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightCrm.Views"
        mc:Ignorable="d"
        Title="CreateOrderWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <GroupBox Header="Пациент" Margin="64,46,549,138">
            <StackPanel>
                <TextBox x:Name="PatientName" Height="20" Margin="10,10,10,10" Text=""/>
