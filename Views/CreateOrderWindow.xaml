            </StackPanel>
        </GroupBox>
        <GroupBox Header="Дата и Услуга" Margin="303,46,303,138">
            <StackPanel>
                <DatePicker Width="150" Height="26" Margin="8,8,8,8"/>
                <ComboBox Width="151" Height="20"/>
                <ListBox Height="151" d:ItemsSource="{d:SampleData ItemCount=5}" Width="147" Margin="8,8,8,8"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Доктор" Margin="564,46,42,138">
            <StackPanel>
                <TextBox Width="147" Height="20" Margin="8,8,8,8" Text=""/>
                <ListBox Height="171" d:ItemsSource="{d:SampleData ItemCount=4}" Width="149"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Отчет услуги" Margin="10,301,10,23">
            <Grid>
                <Button Margin="589,23,10,21" Content="Сохранить"/>
                <Label Content="Пациент:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
                <Label Content="Услуга:" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top"/>
                <Label Content="Доктор:" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top"/>
                <Label Content="Дата:" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top"/>
                <Label Content="test" HorizontalAlignment="Left" Margin="76,0,0,0" VerticalAlignment="Top"/>
                <Label Content="test" HorizontalAlignment="Left" Margin="76,13,0,0" VerticalAlignment="Top"/>
                <Label Content="test" HorizontalAlignment="Left" Margin="76,26,0,0" VerticalAlignment="Top"/>
                <Label Content="test" HorizontalAlignment="Left" Margin="76,39,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <Label Content="Бронирование" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="31" Width="141" FontWeight="Bold" FontSize="14"/>
    </Grid>
</Window>
